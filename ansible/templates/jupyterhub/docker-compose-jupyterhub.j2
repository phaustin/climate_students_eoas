version: '3.7'

# generated from https://github.com/phaustin/climate_modeling_eoas/blob/main/ansible/templates/jupyterhub/docker-compose-jupyterhub.j2
# see vars/jupyterhub_climate.yml for
# hub_service_name, dockerhub_id, container_version, hub_domain, JHUB_OAUTH_CALLBACK_URL
#  example:  hub_service_name: climatehub
#            dockerhub_id: phaustin
#            hub_image_name: climatehub
#            container_version: dec31
#            hub_domain: climhub.phaustin.org
#
services:

  {{ hub_service_name }}:
    build:
        context: {{ hub_image_name }}_image
        dockerfile: ./Dockerfile
    image: {{ dockerhub_id }}/{{ hub_image_name }}:{{ container_version }}
    container_name: {{ hub_image_name }}_{{ container_version }}
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    environment:
      - JHUB_OAUTH_CALLBACK_URL
      - JHUB_OAUTH_CLIENT_ID
      - JHUB_OAUTH_CLIENT_SECRET
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.{{ hub_service_name }}.rule=Host(`{{ hub_domain }}`)"
      - traefik.http.routers.{{ hub_service_name }}.tls=true
      - traefik.http.routers.{{ hub_service_name }}.tls.certresolver=lets-encrypt
      - "traefik.http.routers.{{ hub_service_name }}.service={{hub_service_name }}"
      - "traefik.http.services.{{ hub_service_name }}.loadbalancer.server.port=8000"
    restart: on-failure
    networks:
      - {{ network_name }}


networks:
  {{ network_name }}:
    external: true
